<h1>{{title}}</h1>
<form class="form" action="/new" method="POST" >
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name='name' placeholder="Tim Thompson" class="form-control">
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <input type="text" name="message" class="form-control" placeholder="What's on your mind?">
    </div>
    <input type="submit" value="Post New Message" class="btn btn-primary ">
</form>